{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "jsx": "react-jsx",
    "types": ["vite/client"],

    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
